<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<!-- Rolling file appender with size-based rotation -->
	<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
		<!-- Log directory and base file name -->
		<file value="Logs/main.txt" />
		<appendToFile value="true" />

		<!-- Roll by size -->
		<rollingStyle value="Size" />
		<!-- Max size per file (10 MB) -->
		<maximumFileSize value="10MB" />
		<!-- Keep up to 10 old files: bot.log.1, bot.log.2, ... -->
		<maxSizeRollBackups value="10" />

		<!-- Use date in the path if you want per-day folders -->
		<datePattern value="'/'yyyyMMdd" />

		<staticLogFileName value="true" />

		<!-- Layout -->
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
		</layout>
	</appender>

	<!-- Root logger -->
	<root>
		<!-- Level here is the *minimum* level log4net itself will consider.
         It's still filtered by Microsoft.Extensions.Logging levels from appsettings.json -->
		<level value="DEBUG" />
		<appender-ref ref="RollingFile" />
	</root>
</log4net>